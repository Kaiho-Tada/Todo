<h1>タスク作成</h1>
<% if @task.errors.any? %>
    <% @task.errors.full_messages.each do |message| %>
      <ul>
          <li><%= message %></li>
      </ul>
    <% end %>
<% end %>
<%= form_with model: @task, local: true do |f| %>
  <table>
    <tr>
      <th><%= f.label :title ,"タイトル" %></th>
      <td><%= f.text_field :title %></td>
    </tr>
    <tr>
      <th><%= f.label :start ,"開始日" %></th>
      <td><%= f.date_field :start%></td>
    </tr>
    <tr>
      <th><%= f.label :finish ,"終了日" %></th>
      <td><%= f.date_field :finish%></td>
    </tr>
    <tr>
      <th><%= f.label :check_box ,"終日" %></th>
      <td><%= f.check_box :allday %></td>
    </tr>
    
  </table>

  <div>
    <ul>
      <li><%= f.submit "登録完了する"%></li>
      <li><%= link_to "ユーザー情報一覧に戻る", :tasks %></li>
    </ul>
  </div>
<% end %>