<h3>タスク詳細</h3>
<table>
    <tr>
        <th>id</th>
        <td><%= @task.id %></td>
    </tr>
    <tr>
        <th>タイトル</th>
        <td><%= @task.title %></td>
    </tr>
    <tr>
        <th>開始日</th>
        <td><%= @task.start %></td>
    </tr>
    <tr>
        <th>終了日</th>
        <td><%= @task.finish %></td>
    </tr>
    <tr>
        <th>終日</th>
        <td>
            <% if @task.allday == true %>
                ○ 
            <% end %>
        </td>
    </tr>
</table>
<div>
   <ul>
     <li><%= link_to "タスク情報一覧に戻る", :tasks %></li>
   </ul>
</div>